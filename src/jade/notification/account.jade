case tx.type
  when "sent"
    .type-info
      | You sent {{tx.counterparty | rpnickname}} 
      span.number {{tx.amount | rpamount}}
      span.currency  {{tx.currency}}
  when "received"
    .type-success
      | {{tx.counterparty | rpnickname}} sent you 
      span.number {{tx.amount | rpamount}}
      span.currency  {{tx.currency}}
  when "trusted"
    .type-success
      | {{tx.counterparty | rpnickname}} now trusts you for 
      span.number {{tx.limit_peer | rpamount}}
      span.currency  {{tx.currency}}
  when "trusting"
    .type-success
      | You now trust {{tx.counterparty | rpnickname}} for 
      span.number {{tx.limit | rpamount}}
      span.currency  {{tx.currency}}