container(ng-controller="ColdWalletCtrl")
  group.error(ng-show="accountError") Error reading account information. {{accountErrorMessage}}
    hr

  group.disconnected(ng-hide="connected")
    p.literal(l10n) You have to be online to see this screen

  group(ng-if="connected", ng-hide="accountError")
    div.row.row-content
      div.col-xs-12.col-sm-5
        div.panel.panel-primary
          div.panel-heading
            h3.panel-title Account {{address}}
          div.panel-body
            dl.dl-horizontal
              dt Sequence Number
              dd {{sequenceNumber}}
              dt Network Fee
              dd {{networkFee}} XRP
      div.col-xs-12.col-sm-7
        div.well
          p(ng-hide="transactionError") {{lastTxn}} The transaction was validated at {{txnTime | date:'yyyy-MM-dd HH:mm:ss Z'}}.
          p.error(ng-show="transactionError") {{transactionErrorMessage}}
    div.row.row-content
      div.col-xs-12
        h4 Account Flags 
          i.fa.fa-question-circle.help-icon(
            rp-popover
            rp-popover-placement="right"
            l10n-rp-popover-title="Setup Information"
            rp-popover-trigger="click"
            l10n-data-content="Best practices for these account flags may be found <a href=https://ripple.com/build/gateway-guide/ target=_blank>here</a>.")
        div.table-responsive
          table.table.table-striped.table-bordered
            thead
              tr
                th Setting
                th Enabled
                th Description
            tbody
              tr(ng-repeat="line in accountInfo")
                td {{line.setting}}
                td {{line.enabled}}
                td {{line.description}}
    div.row.row-content
      div.col-xs-12
        h4 Balances
        div.table-responsive
          table.table.table-striped.table-bordered
            thead
              tr
                th Currency
                th Counterparty
                th Value
            tbody
              tr(ng-repeat="balance in balances")
                td {{balance.currency}}
                td {{balance.counterparty}}
                td {{balance.value}}
    div.row.row-content(ng-hide="!warningLines.length")
      div.col-xs-12
        h4 Trust Lines with warnings
        div.table-responsive
          table.table.table-striped.table-bordered
            thead.danger
              tr
                th Counterparty
                th Currency
                th Rippling
                th Authorized
                th Warning
            tbody
              tr(ng-repeat="line in warningLines")
                td {{line.specification.counterparty}}
                td {{line.specification.currency}}
                td(ng-if="!line.specification.ripplingDisabled") Enabled
                td(ng-if="line.specification.ripplingDisabled") Disabled
                td {{line.specification.authorized}}
                td {{line.warning}}
    div.row.row-content
      div.col-xs-12
        button.btn.btn-success(ng-click='gotoLogin()') Back to login